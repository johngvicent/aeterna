---
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '../layouts/Layout.astro'; // Tu layout principal

// Filtramos la colecci처n para traer solo lo que es "Antig체edad"
const obrasAntiguedad = await getCollection('galeria', ({ data }: CollectionEntry<'galeria'>) => {
    return data.epoca === 'Antig체edad';
});
---

<Layout title="Antig체edad | AETERNA">
    <main class="grid-container">
    {obrasAntiguedad.map((obra: CollectionEntry<'galeria'>) => (
        <a href={`/galeria/${obra.slug}`} class="card">
            <div class="card-image" style={`background-image: url('${obra.data.image}');`}></div>
            <div class="card-text">
                <h3>{obra.data.title}</h3>
                <span>{obra.data.epoca}</span>
            </div>
        </a>
    ))}
    </main>
</Layout>